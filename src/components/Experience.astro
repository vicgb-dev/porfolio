import ExperienceItem from "./ExperienceItem.astro";

const experiences = [
    {
        date: "2021 - Actualmente",
        company: "Geneticai",
        title: "Programador Fullstack",
        descriptions: [
            "Desarrollo de aplicaciones desde cero, incluyendo el diseño de la base de datos, la creación de la API y el desarrollo del frontend.",
            "Uso de tecnologías como .NET, Angular, Flutter y Unity.",
        ],
        link: "#",
    },
    {
        date: "2018 - 2019",
        company: "Accenture",
        title: "Programador Junior",
        descriptions: [
            "Desarrollo de CRM Salesforce, documentación y testing.",
