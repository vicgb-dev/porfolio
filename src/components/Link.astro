---
interface LinkProps {
    url: string;
    text: string;
}

const { url, text } = Astro.props;
---

<a
    href={url}
    class="colored on-colored transition-all duration-200 flex gap-2 items-center py-2 text-lg font-medium"
    target="_blank"
    rel="noopener noreferrer"
>
    <slot />
    {text}
</a>
